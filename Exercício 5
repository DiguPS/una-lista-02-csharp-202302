namespace Lista_de_atividades_2
{
    internal class Program
    {
        static void Main(string[] args)
        {
            double horas, valorhr, valorsf, filhos, salario;
            Console.WriteLine("Digite o numero de horas trabalhadas:");
            horas = double.Parse(Console.ReadLine());
            Console.WriteLine("Digite o valor recebido por hora:");
            valorhr = double.Parse(Console.ReadLine());
            Console.WriteLine("Digite a quantidade de filhos menores de 14 anos");
            filhos = double.Parse(Console.ReadLine());
            valorsf = 300;
            salario = (horas * valorhr) + (valorsf * filhos);
            Console.WriteLine("O salario do funcionario com base nos dados inseridos Ã©: R$ " + salario.ToString("N2"));
            Console.ReadKey();
        }
    }
}

