namespace Lista_de_atividades_2
{
    internal class Program
    {
        static void Main(string[] args)
        {
            double tempc, tempf;
            Console.WriteLine("digite a temperatura em Fahrenheit");
            tempf = double.Parse (Console.ReadLine());
            tempc = (tempf - 32) / 1.8;
            Console.WriteLine("A temperatura em Celsius Ã© " + tempc.ToString("N2"));
            Console.ReadKey();
        }
    }
}
